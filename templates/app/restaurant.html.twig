{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Products in {{ restaurant.name }}</h1>
    <a href="{{ path('app_district', {'id': restaurant.district.id}) }}">
        Back to all restaurants in {{ restaurant.district.name }}
    </a>
    <ul>
        {% for productRestaurant in restaurant.productRestaurants %}
            <li>
                {{ productRestaurant.product.name }}<br>
                {{ productRestaurant.stock }} in stock<br>
                {% if productRestaurant.stock < 100 %}
                    <marquee direction="down" style="color:red">Low stock!!!</marquee><br>
                {% endif %}
                â‚¬{{ productRestaurant.price }}<br><br>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
